<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/alertLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:background="@android:color/darker_gray" />

            <View
                android:id="@+id/view6"
                android:layout_width="1dp"
                android:layout_height="42dp"
                android:layout_below="@+id/view5"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_above="@+id/view4"
                android:layout_toEndOf="@+id/tvSymbolRC"
                android:background="@android:color/darker_gray" />

            <View
                android:id="@+id/view7"
                android:layout_width="1dp"
                android:layout_height="42dp"
                android:layout_above="@+id/view4"
                android:layout_below="@+id/view5"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/textView8"
                android:background="@android:color/darker_gray" />

            <View
                android:id="@+id/view8"
                android:layout_width="1dp"
                android:layout_height="42dp"
                android:layout_above="@+id/view4"
                android:layout_below="@+id/view5"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/textView13"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tvSymbolRC"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view5"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="#30D8C4"
                android:gravity="center"
                android:text="AAPL"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvNameRC"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSymbolRC"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/view6"
                android:background="#30D8C4"
                android:gravity="center"
                android:text="Apple Inc"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvCurrentPriceRC"
                android:layout_below="@+id/view5"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/view6"
                android:background="#546360"
                android:gravity="center"
                android:text="Current Price:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvCurrentPriceRC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/view4"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toStartOf="@+id/view7"
                android:layout_toEndOf="@+id/view6"
                android:background="#93C5B9"
                android:gravity="center"
                android:text="150.00"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvAlertPriceRC"
                android:layout_below="@+id/view5"
                android:layout_alignParentTop="false"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/view7"
                android:background="#546360"
                android:gravity="center"
                android:text="Alert Price:"
                android:textSize="20sp" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvNameRC"
                android:layout_marginTop="0dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tvAlertPriceRC"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/view4"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/view7"
                android:background="#93C5B9"
                android:gravity="center"
                android:text="199.33"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/ivDeleteAlert"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_above="@+id/view4"
                android:layout_below="@+id/view5"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/view8"
                android:src="@drawable/ic_delete"
                app:tint="#C61616" />




        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>