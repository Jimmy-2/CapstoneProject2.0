<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/portfoliorecyclerlayout"
    android:layout_width="match_parent"
    android:layout_height="90sp"
    android:background="#546360">

    <TextView
        android:id="@+id/stockinfotextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:height="70sp"
        android:shadowColor="#FFFFFF"
        android:shadowDx="1.5"
        android:shadowDy="1.3"

        android:shadowRadius="1.6"
        android:text="stock"
        android:textColor="@android:color/background_light"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/stockinfotextviewprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/stockinfotextview"
        android:layout_alignParentTop="true"
        android:layout_marginStart="207dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:text="price"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/portfoliorecyclerstockamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/stockinfotextview"
        android:layout_alignTop="@+id/stockinfotextview"
        android:layout_marginStart="206dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:text="amount"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/stockinfotextview"
        android:layout_alignTop="@+id/stockinfotextview"
        android:layout_marginStart="207dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:text="total"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

    <Button
        android:id="@+id/deletebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/stockinfotextview"
        android:layout_alignParentStart="true"
        android:layout_marginStart="316dp"
        android:layout_marginTop="0dp"
        android:text="Modify" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/stockinfotextview"
        android:layout_alignParentStart="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="0dp"
        android:text="Price:"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/stockinfotextview"
        android:layout_alignParentStart="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="52dp"
        android:text="Total:"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/stockinfotextview"
        android:layout_alignParentStart="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="26dp"
        android:text="Amount:"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />


</RelativeLayout>